<%= render 'layouts/header' %>
<div class='jumbotron'>
	<div class="container">
		<h1 align='center'>Material Details</h1>
	</div>
	<div class='container'>
			<%= render 'layouts/alert_message' %>
	</div>
</div>
<div class="col-md-10 col-md-offset-1" align="center">
		<br />
		<br />
		<table class="wikitable">
		<tr>
			<th>ID</th>
			<th>Category</th>
			<% if !@material.subcategory.blank? || current_user.admin %><th>Sub-Category</th><% end %>
			<th>Measurements</th>
			<th>Product</th>
			<th>Product #</th>
			<th>Product Description</th>
			<th>UOM</th>
			<th>Price</th>
			<th>In Stock</th>
			<th>Vendor</th>
			<th>Total</th>
			<th>Markup(15%)</th>
		</tr>
		<tr>
				<td width="2%"><%= @material.id %></td>
				<td width="5%"><%= @material.category %></td>
				<% if !@material.subcategory.blank? || current_user.admin %><td width="5%"><%= @material.subcategory %></td><% end %>
				<td width="5%"><%= @material.measurements %></td>
				<td width="20%"><%= @material.product %></td>
				<td width="4%"><%= @material.product_number %></td>
				<td width="20%"><%= @material.product_description %></td>
				<td width="3%" align="center"><%= @material.uom %></td>
				<td width="5%" align="center"><%= number_to_currency(@material.price) %></td>
				<td width="4%" align="center"><%= @material.in_stock.to_i %></td>
				<td width="4%" align="center"><%= @material.vendor %></td>
				<td width="3%" align="center"><%= number_to_currency(@material.in_stock.to_f*@material.price.to_f) %></td>
				<td width="2%" align="center"><%= number_to_currency(@material.price.to_f*0.15+@material.price.to_f) %></td>
		</tr>
		</table>
		<br>
		<br>
</div>
<br />
<br />

<div class="stacks col-md-offset-1 col-md-10">
	
	<% if current_user.admin %><div><%= link_to 'Back to Edit', edit_material_path(@material) %></div><% end %>
	<div><%= link_to 'Back to Main', root_path(:query) %></div>
	<% if current_user.admin %><div><%= link_to 'Back to Status', status_path %></div><% end %>
</div>


